<Window x:Class="Labirintus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Labirintus" Height="650" Width="700"
        Background="#e5e5e5"
        Loaded="AblakBetoltve"
        KeyDown="BillentyuLenyomva">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Background="#d9d9d9" Padding="12" CornerRadius="4" BorderBrush="#b0b0b0" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Labirintus" FontSize="22" FontWeight="SemiBold" Foreground="#202020"/>
                <TextBlock Text="Nyilak vagy WASD a mozgáshoz. Érd el a zöld kijáratot." 
                           Margin="0,6,0,0" Foreground="#404040" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#d0d0d0" CornerRadius="4" Padding="6" BorderBrush="#b0b0b0" BorderThickness="1">
            <Canvas x:Name="JatekVaszon" Focusable="True" Background="#f0f0f0" />
        </Border>

        <DockPanel Grid.Row="2" Margin="0,10,0,0">
            <Button x:Name="UjrakezdesGomb"
                    Content="Újrakezdés"
                    Width="110"
                    Height="34"
                    Margin="0,0,10,0"
                    Click="UjrakezdesKattintas"/>
            <TextBlock x:Name="AllapotSzoveg"
                       VerticalAlignment="Center"
                       Foreground="#202020"
                       FontWeight="SemiBold"/>
        </DockPanel>
    </Grid>
</Window>
